{
  "name": "FastAPI App in Dev Container",
  "image": "mcr.microsoft.com/devcontainers/python:3.11", // Adjust Python version as needed
  
  "features": {
    "ghcr.io/devcontainers/features/python:1": {}
  },
  
  // Configure tool-specific properties.
  "customizations": {
    // Configure properties specific to VS Code.
    "vscode": {
      // Add the IDs of extensions you want installed when the container is created.
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },
  
  // Use 'postCreateCommand' to run commands after the container is created.
  "postCreateCommand": "python -m venv venv && source venv/bin/activate && pip install fastapi uvicorn",
  
  // Use 'postAttachCommand' to run commands after the workspace attaches to the container.
  "postAttachCommand": "source venv/bin/activate && uvicorn main:app --reload --host 0.0.0.0 --port 8000",
  
  // Forward the port where the Uvicorn server is running.
  "forwardPorts": [8000],
  
  // Open the browser automatically when the port becomes available.
  "portsAttributes": {
    "8000": {
      "label": "FastAPI App",
      "onAutoForward": "openBrowser"
    }
  }
}